<div class="show">
	
	<h2><%= @article.title %></h2>

	<p><%= @article.desc %></p>


	<div class="sourcecode">
		<%= coderay(raw @article.sourcecode) %>
	</div>

	<div class="tags">
		<p>Tags: <span>
			<% for tag in @article.tags %>
				<%=h tag.name %> | 
			<% end %>
			<%#= @article.tags %></span></p>
	</div>

</div>