<% for article in @articles do %>
	
	<h2><%=link_to(h(article.title), article_path(article)) %></h2>
	
	<p><%= article.desc %></p>
	
	<!-- <div class="sourcecode">
		<%= article.sourcecode %>
	</div> -->
	<div class="category">
		Category: <%= article.category%>
	</div>
	<div class="tags">
		Tags: <%= article.tags %>
	</div>
	

<% end %>

