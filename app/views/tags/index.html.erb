<% for article in @articles do %>
	
	<h2><%=link_to(h(article.title), article_path(article)) %></h2>
	
	<p class="articleDesc"><%= article.desc %></p>
	
	<!--<div class="sourcecode">
		<%= article.sourcecode %>
	</div> -->
	<div class="tags">
		<p>Tags: <span>
			<% @tags = Tag.find_all_by_article_id(article) %>
			<% for tag in @tags %>
				<%=h tag.name %> | 
			<% end %>
		</span></p>
	</div>

	<% if admin? %>
	<p class="adminActions">
		<%= link_to "Edit", edit_article_path(article) %>
		<%= link_to "Destroy", article_path(article), :confirm => "Are you sure?", :method => :delete %>
	</p>
	<% end %>

<% end %>

<% if admin? %>
<p class="adminActions">
	<%= link_to "New", new_article_path %>
</p>
<% end %>